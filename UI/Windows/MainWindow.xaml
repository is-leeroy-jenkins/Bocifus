<fw:AcrylicWindow
    x:Class="Bocifus.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:Bocifus"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:sync="http://schemas.syncfusion.com/wpf"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Brocifus"
    Width="1050"
    Height="800"
    fw:AcrylicWindow.AcrylicAccentState="Default"
    fw:AcrylicWindow.Enabled="True"
    fw:PointerTracker.Enabled="True"
    ui:ThemeManager.IsThemeAware="True"
    BorderBrush="{StaticResource BlueBorderBrush}"
    Closing="OnWindowClosing"
    Icon="/Resources/Assets/ApplicationImages/Bocifus.png"
    KeyDown="OnWindowKeyDown"
    Loaded="OnMainWindowLoaded"
    PreviewKeyDown="OnAcrylicWindowPreviewKeyDown"
    TintOpacity="0.7"
    mc:Ignorable="d">

    <!--  ******************************************* RESOURCES ************************************************  -->

    <Window.Resources>

        <CollectionViewSource
            x:Key="SortedConversations"
            Source="{Binding ConversationManager.Histories}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription
                    Direction="Descending"
                    PropertyName="LastUpdated" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <CollectionViewSource
            x:Key="SortedPromptTemplates"
            Source="{Binding PromptTemplatesManger.Templates}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription
                    Direction="Ascending"
                    PropertyName="SortOrder" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <b:FavoriteToSymbolConverter x:Key="FavoriteToSymbolConverter" />
        <b:ContentToVisibilityConverter x:Key="ContentToVisibilityConverter" />

        <Style TargetType="ToolTip">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="BorderBrush" Value="{StaticResource BlueBorderBrush}" />
            <Setter Property="Background" Value="{StaticResource BlackBackground}" />
            <Setter Property="Foreground" Value="{StaticResource LightBlueBrush}" />
        </Style>

    </Window.Resources>

    <!--  ******************************************** Context Menu ******************************************  -->

    <Window.ContextMenu>
        <ContextMenu x:Name="MainWindowContextMenu">

            <sync:MenuItemAdv
                Click="OnFileMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="File"
                ToolTip="Browse File System">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FileItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFolderMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Folder"
                ToolTip="Browse Directories">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FolderItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnChromeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Chrome"
                ToolTip="Launch Chrome Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ChromeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnEdgeOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Edge"
                ToolTip="Launch Edge Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/EdgeItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnFirefoxOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="FireFox"
                ToolTip="Launch Firefox Browser">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/FirefoxItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCalculatorMenuOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Calculator"
                ToolTip="Open Calculator">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CalculatorItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnControlPanelOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Control Panel"
                ToolTip="Windows 10 Control Panel">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/ControlPanelItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <sync:MenuItemAdv
                Click="OnTaskManagerOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Task Manager"
                ToolTip="Windows 10 Task Manager">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/TaskManagerItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

            <Separator Background="{StaticResource BlueBorderBrush}" />

            <sync:MenuItemAdv
                Click="OnCloseOptionClick"
                Foreground="{StaticResource LightBlueBrush}"
                Header="Close"
                ToolTip="Exit Application">
                <sync:MenuItemAdv.Icon>
                    <Image Source="/Resources/Assets/MenuImages/CloseItem.png" />
                </sync:MenuItemAdv.Icon>
            </sync:MenuItemAdv>

        </ContextMenu>
    </Window.ContextMenu>

    <!--  ***********************************************************LAYOUT****************************************************  -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <fw:DropShadowPanel
            Grid.Row="0"
            Panel.ZIndex="-5"
            BlurRadius="100"
            ShadowMode="Inner"
            ShadowOpacity="0.2"
            Color="{DynamicResource SystemChromeBlackHighColor}">
            <Grid
                Grid.Row="0"
                Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Label
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Configuration" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            x:Name="ConfigurationComboBox"
                            MinWidth="120"
                            MaxWidth="200"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            MaxDropDownHeight="500"
                            SelectionChanged="OnConfigurationComboBoxSelectionChanged">
                            <ComboBox.Background>
                                <SolidColorBrush
                                    Opacity="0.5"
                                    Color="{DynamicResource ControlInteriorColor}" />
                            </ComboBox.Background>
                        </ComboBox>
                        <Button
                            x:Name="ConfigurationSettingButton"
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Padding="-10,-10,-10,-10"
                            VerticalAlignment="Center"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnConfigurationSettingButtonClick"
                            Style="{StaticResource ButtonRevealStyle}">
                            <ui:SymbolIcon Symbol="Setting" />
                        </Button>
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Column="3"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Label
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="System Prompt" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            x:Name="SystemPromptComboBox"
                            Grid.Column="0"
                            MinWidth="120"
                            MaxWidth="200"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            MaxDropDownHeight="500"
                            SelectionChanged="OnSystemPromptComboBoxSelectionChanged">
                            <ComboBox.Background>
                                <SolidColorBrush
                                    Opacity="0.5"
                                    Color="{DynamicResource SystemChromeLowColor}" />
                            </ComboBox.Background>
                        </ComboBox>
                        <Button
                            x:Name="InstructionSettingButton"
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Padding="-10,-10,-10,-10"
                            VerticalAlignment="Center"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnInstructionSettingButtonClick"
                            Style="{StaticResource ButtonRevealStyle}">
                            <ui:SymbolIcon Symbol="List" />
                        </Button>
                        <Button
                            x:Name="OpenSytemPromptWindowButton"
                            Grid.Column="2"
                            Width="32"
                            Height="32"
                            Margin="5,0,0,0"
                            Padding="-10,-10,-10,-10"
                            VerticalAlignment="Center"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnOpenSytemPromptWindowButtonClick"
                            Style="{StaticResource ButtonRevealStyle}">
                            <ui:SymbolIcon
                                x:Name="OpenSytemPromptWindowButtonIcon"
                                Symbol="OpenPane" />
                        </Button>
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Column="4"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Label
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Conversation History" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition Width="105" />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="ConversationHistoryButton"
                            Grid.Column="0"
                            Width="32"
                            Height="32"
                            Margin="0,0,5,0"
                            VerticalAlignment="Bottom"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnConversationHistoryButtonClick"
                            Style="{StaticResource ButtonRevealStyle}"
                            ToolTip="Open conversation history">
                            <ui:SymbolIcon Symbol="Edit" />
                        </Button>
                        <Button
                            x:Name="ConversationHistoryClearButton"
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Margin="0,0,5,0"
                            VerticalAlignment="Bottom"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnConversationHistoryClearButtonClick"
                            Style="{StaticResource ButtonRevealStyle}"
                            ToolTip="Delete conversation history">
                            <ui:SymbolIcon Symbol="Delete" />
                        </Button>
                        <ui:ToggleSwitch
                            x:Name="UseConversationHistoryToggleSwitch"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            OffContent="Not Use"
                            OnContent="Use"
                            Toggled="OnUseConversationHistoryToggleSwitchToggled"
                            ToolTip="Turn on to use conversation history" />
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Column="5"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <ui:ToggleSwitch
                        x:Name="NoticeToggleSwitch"
                        Grid.Column="2"
                        Width="80"
                        HorizontalAlignment="Left"
                        Header="Notice"
                        OffContent="Off"
                        OnContent="On"
                        Toggled="OnNoticeToggleSwitchToggled"
                        ToolTip="If on, sends notification after response is complete" />
                </StackPanel>
                <Menu
                    Grid.Column="8"
                    Height="60"
                    Margin="0,0,15,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <MenuItem
                        Height="60"
                        Padding="0,0,0,0"
                        Header="Settings">
                        <MenuItem
                            x:Name="ColorMenuItem"
                            Click="OnColorMenuItemClick"
                            Header="Color Theme">
                            <MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Highlight" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            x:Name="TranslationAPIMenuItem"
                            Click="OnTranslationApiMenuItemClick"
                            Header="Translation API">
                            <MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Globe" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            x:Name="TitleGenerationMenuItem"
                            Click="OnTitleGenerationMenuItemClick"
                            Header="Title Generation">
                            <MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Edit" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            x:Name="VersionInformationMenuItem"
                            Click="OnVersionInformationMenuItemClick"
                            Header="Version Information">
                            <MenuItem.Icon>
                                <ui:SymbolIcon Symbol="Sync" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </Grid>
        </fw:DropShadowPanel>
        <!--        <Button x:Name="BottomScrollButton"
                Content="⬇"
                Grid.Row="1"
                Style="{StaticResource ButtonRevealStyle}"
                fw:RevealElement.BorderRadius="100"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Margin="0,0,20,20"
                Width="32"
                Height="32"
                Panel.ZIndex="10"
                Click="BottomScrollButton_Click"
                Opacity="0.8" />-->
        <!--<Thumb x:Name="ResizeThumb" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="15" Height="15" DragDelta="ResizeThumb_DragDelta" Background="gray"
            ToolTip="You can resize the user text box by dragging it with the mouse."/>-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="ConversationHistorytGridColumn" />
                <ColumnDefinition
                    x:Name="GridSplitterGridColumn"
                    Width="Auto" />
                <ColumnDefinition x:Name="SystemPromptGridColumn" />
                <ColumnDefinition
                    x:Name="GridSplitterGridColumn2"
                    Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid
                x:Name="LeftColumnGrid"
                Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition
                        x:Name="ChatListGridRow"
                        Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition
                        x:Name="PromptTemplateGridRow"
                        Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.Background>
                    <SolidColorBrush
                        Opacity="0.2"
                        Color="{DynamicResource SystemAltMediumHighColor}" />
                </Grid.Background>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Margin="0,5,0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button
                            x:Name="NewChatButton"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="32"
                            Margin="10,0,5,0"
                            HorizontalAlignment="Stretch"
                            fw:RevealElement.BorderRadius="4"
                            Background="#33808080"
                            Click="OnNewChatButtonClick"
                            Content="+ New chat"
                            FontSize="14"
                            Style="{StaticResource ButtonRevealStyle}" />
                        <Button
                            x:Name="ToggleFilterButton"
                            Grid.Row="0"
                            Grid.Column="2"
                            Width="32"
                            Height="32"
                            Margin="0,0,10,0"
                            Padding="-10,-10,-10,-10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            fw:RevealElement.BorderRadius="4"
                            Background="#33808080"
                            Click="OnToggleFilterButtonClick"
                            Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                            Style="{StaticResource ButtonRevealStyle}">
                            <ui:SymbolIcon Symbol="Filter" />
                        </Button>
                        <TextBox
                            x:Name="FilterTextBox"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Height="30"
                            Margin="50,5,80,0"
                            Padding="10,5,20,5"
                            VerticalAlignment="Center"
                            ui:ControlHelper.PlaceholderText="Filter"
                            TextChanged="OnFilterTextBoxTextChanged"
                            TextWrapping="Wrap"
                            Visibility="Collapsed">
                            <TextBox.Background>
                                <SolidColorBrush
                                    Opacity="0.5"
                                    Color="{StaticResource ControlInteriorColor}" />
                            </TextBox.Background>
                        </TextBox>
                        <Button
                            x:Name="FilterTextBoxClearButton"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Width="20"
                            Height="20"
                            Margin="0,3,83,0"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            Click="OnClearTextButtonClick"
                            Content="✕"
                            Visibility="Collapsed" />
                        <ToggleButton
                            x:Name="FavoriteFilterToggleButton"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Width="32"
                            Height="32"
                            Margin="0,5,43,0"
                            Padding="-10,-10,-10,-10"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnFavoriteFilterToggleButtonClick"
                            FontSize="20"
                            Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                            Visibility="Collapsed">
                            <ToggleButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        x:Name="FavoriteIconTextBlock"
                                        Text="☆" />
                                    <DataTemplate.Triggers>
                                        <DataTrigger
                                            Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                                            Value="True">
                                            <Setter TargetName="FavoriteIconTextBlock" Property="Text" Value="★" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ToggleButton.ContentTemplate>
                        </ToggleButton>
                    </Grid>
                    <ListBox
                        x:Name="ConversationListBox"
                        Grid.Row="1"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ItemsSource="{Binding Source={StaticResource SortedConversations}}"
                        SelectionChanged="OnConversationListBoxSelectionChanged">
                        <ListBox.ItemContainerStyle>
                            <Style
                                BasedOn="{StaticResource ListBoxItemStyle}"
                                TargetType="ListBoxItem">
                                <Setter Property="Height" Value="51" />
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.Background>
                            <SolidColorBrush Opacity="0.2" />
                        </ListBox.Background>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox
                                        Grid.Column="0"
                                        VerticalAlignment="Stretch"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Cursor="Arrow"
                                        Focusable="False"
                                        IsReadOnly="True"
                                        Text="{Binding Title, Mode=TwoWay}">
                                        <TextBox.ToolTip>
                                            <ToolTip>
                                                <ToolTip.Content>
                                                    <StackPanel>
                                                        <TextBlock
                                                            Text="{Binding Title}"
                                                            TextWrapping="Wrap" />
                                                        <TextBlock
                                                            Text="{Binding LastUpdated, StringFormat='LastUpdate: {0:yyyy/MM/dd HH:mm:ss}'}"
                                                            TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </ToolTip.Content>
                                            </ToolTip>
                                        </TextBox.ToolTip>
                                    </TextBox>
                                    <Button
                                        x:Name="ConversationListBoxMoreButton"
                                        Grid.Column="1"
                                        Width="32"
                                        Height="32"
                                        Margin="10,0,0,0"
                                        Padding="-10,-10,-10,-10"
                                        VerticalAlignment="Center"
                                        fw:RevealElement.BorderRadius="4"
                                        Background="Transparent"
                                        Click="OnConversationListBoxMoreButtonClick"
                                        FontSize="20"
                                        Opacity="0.6">
                                        <Button.ContextMenu>
                                            <ContextMenu
                                                Opened="OnContextMenuOpened"
                                                PreviewKeyDown="OnConversationListBoxContextMenuPreviewKeyDown">
                                                <MenuItem
                                                    Click="OnConversationFavoriteButtonClick"
                                                    Header="Favorite">
                                                    <MenuItem.Icon>
                                                        <ContentControl Content="{Binding Favorite, Converter={StaticResource FavoriteToSymbolConverter}}" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem
                                                    Click="OnConversationTitleEditButtonClick"
                                                    Header="Title Edit">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Edit" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem
                                                    Click="OnConversationDeleteButtonClick"
                                                    Header="Delete">
                                                    <MenuItem.Icon>
                                                        <ui:SymbolIcon Symbol="Delete" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Button.ContextMenu>
                                        <Button.Style>
                                            <Style
                                                BasedOn="{StaticResource ButtonRevealStyle}"
                                                TargetType="Button">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding IsSelected}"
                                                        Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <ui:SymbolIcon Symbol="More" />
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
                <GridSplitter
                    x:Name="Testsplitter"
                    Grid.Row="1"
                    Height="10"
                    HorizontalAlignment="Stretch"
                    Background="Transparent" />
                <Border
                    Grid.Row="2"
                    Margin="10,0,10,0"
                    Padding="0"
                    CornerRadius="10"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <Border.Background>
                        <SolidColorBrush
                            Opacity="0.05"
                            Color="{StaticResource BlueBorderColor}" />
                    </Border.Background>
                    <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid
                            x:Name="PromptTemplateGrid1"
                            Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Button
                                x:Name="NewTemplateButton"
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Height="32"
                                Margin="10,5,10,5"
                                HorizontalAlignment="Stretch"
                                fw:RevealElement.BorderRadius="4"
                                Background="#33808080"
                                Click="OnNewTemplateButtonClick"
                                Content="+ New template"
                                FontSize="14"
                                Style="{StaticResource ButtonRevealStyle}" />
                            <ListBox
                                x:Name="PromptTemplateListBox"
                                Grid.Row="1"
                                d:ItemsSource="{d:SampleData ItemCount=5}"
                                ItemsSource="{Binding Source={StaticResource SortedPromptTemplates}}"
                                MouseLeave="OnPromptTemplateListBoxMouseLeave"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                SelectionChanged="OnPromptTemplateListBoxSelectionChanged">
                                <ListBox.ItemContainerStyle>
                                    <Style
                                        BasedOn="{StaticResource ListBoxItemStyle}"
                                        TargetType="ListBoxItem">
                                        <Setter Property="Height" Value="40" />
                                        <EventSetter
                                            Event="MouseEnter"
                                            Handler="OnPromptTemplateListBoxItemMouseEnter" />
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.Background>
                                    <SolidColorBrush Opacity="0.2" />
                                </ListBox.Background>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBox
                                                Grid.Column="0"
                                                VerticalAlignment="Stretch"
                                                VerticalContentAlignment="Center"
                                                BorderThickness="0"
                                                Cursor="Arrow"
                                                Focusable="False"
                                                IsReadOnly="True"
                                                Text="{Binding Title, Mode=TwoWay}">
                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        <ToolTip.Content>
                                                            <TextBlock Text="{Binding LastUpdated, StringFormat='LastUpdate: {0:yyyy/MM/dd HH:mm:ss}'}" />
                                                        </ToolTip.Content>
                                                    </ToolTip>
                                                </TextBox.ToolTip>
                                            </TextBox>
