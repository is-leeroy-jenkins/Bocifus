                            </ListBox>
                        </Grid>
                    </Grid>
                </Border>
                <Button
                    x:Name="ToggleVisibilityPromptTemplateButton"
                    Grid.Row="3"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    fw:RevealElement.BorderRadius="4"
                    Background="Transparent"
                    Click="OnToggleVisibilityPromptTemplateButtonClick"
                    Content="▼"
                    Style="{StaticResource ButtonRevealStyle}" />
            </Grid>
            <GridSplitter
                Grid.Column="1"
                Width="10"
                Margin="-10,0,0,0"
                HorizontalAlignment="Stretch"
                Background="Transparent" />
            <Grid
                x:Name="SystemPromptGrid"
                Grid.Column="2">
                <Grid.Background>
                    <SolidColorBrush
                        Opacity="0.1"
                        Color="{DynamicResource SystemAltMediumHighColor}" />
                </Grid.Background>
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        Content="System Prompt Templete" />
                    <Grid
                        Grid.Row="1"
                        HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            x:Name="SystemPromptComboBox2"
                            Grid.Column="0"
                            MinWidth="120"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            MaxDropDownHeight="500"
                            SelectionChanged="OnSystemPromptComboBox2SelectionChanged">
                            <ComboBox.Background>
                                <SolidColorBrush
                                    Opacity="0.5"
                                    Color="{DynamicResource SystemChromeLowColor}" />
                            </ComboBox.Background>
                        </ComboBox>
                        <Label
                            x:Name="UnsavedLabel"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Content="*"
                            Visibility="Collapsed" />
                    </Grid>
                    <TextBox
                        x:Name="SystemPromptContentsTextBox"
                        Grid.Row="2"
                        Margin="10,10,10,10"
                        VerticalAlignment="Top"
                        ui:ControlHelper.PlaceholderText="System Prompt Content"
                        AcceptsReturn="True"
                        AcceptsTab="True"
                        TextChanged="OnSystemPromptContentsTextBoxTextChanged"
                        TextWrapping="Wrap">
                        <TextBox.Background>
                            <SolidColorBrush
                                Opacity="0.5"
                                Color="{DynamicResource SystemChromeLowColor}" />
                        </TextBox.Background>
                    </TextBox>
                </Grid>
            </Grid>
            <GridSplitter
                x:Name="SystemPromptSplitter"
                Grid.Column="3"
                Width="10"
                Margin="-10,0,0,0"
                HorizontalAlignment="Stretch"
                Background="Transparent" />
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ScrollViewer
                    x:Name="MessageScrollViewer"
                    Grid.Row="0"
                    PreviewKeyDown="OnMessageScrollViewerPreviewKeyDown"
                    ScrollChanged="OnMessageScrollViewerScrollChanged"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel
                        x:Name="MessagesPanel"
                        PreviewMouseWheel="OnMouseWheelPreview" />
                </ScrollViewer>
                <Button
                    x:Name="BottomScrollButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="32"
                    Height="32"
                    Margin="0,0,20,20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Panel.ZIndex="10"
                    fw:RevealElement.BorderRadius="100"
                    Click="OnBottomScrollButtonClick"
                    Content="⬇"
                    Opacity="0.8"
                    Style="{StaticResource ButtonRevealStyle}" />
                <Grid
                    Grid.Row="1"
                    MouseEnter="OnAssistantMessageGridMouseEnter"
                    MouseLeave="OnAssistantMessageGridMouseLeave">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition
                            Width="20*"
                            MaxWidth="1300" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label
                            x:Name="ImageFilePathLabel"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="21,-21,0,45"
                            HorizontalAlignment="Left"
                            Content="C:\\work\image.png"
                            Cursor="Hand"
                            MouseUp="OnImageFilePathLabelMouseUp"
                            Opacity="0.9" />
                        <Button
                            x:Name="ClearImageFilePathLabelButton"
                            Grid.Column="0"
                            Width="22"
                            Height="22"
                            Margin="0,-68,0,0"
                            Padding="-10,-10,-10,-10"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            Click="OnClearImageFilePathLabelButtonClick"
                            Content="✖"
                            Opacity="0.5"
                            Visibility="{Binding Content, ElementName=ImageFilePathLabel, Converter={StaticResource ContentToVisibilityConverter}}" />
                        <StackPanel Grid.Column="0">
                            <Button
                                x:Name="ShowLargeTextInputWindowButton"
                                HorizontalAlignment="Stretch"
                                fw:RevealElement.BorderRadius="4"
                                Click="OnShowLargeTextInputWindowButtonClick"
                                Content="▲"
                                Style="{StaticResource ButtonRevealStyle}"
                                ToolTip="Expand text input (F2)"
                                Visibility="Collapsed" />
                            <TextBox
                                x:Name="UserTextBox"
                                MinWidth="0"
                                MaxHeight="180"
                                Padding="10,10,10,10"
                                VerticalAlignment="Bottom"
                                ui:ControlHelper.PlaceholderText="Send a message..."
                                AcceptsReturn="True"
                                FontSize="16"
                                KeyDown="OnUserTextBoxKeyDown"
                                MouseWheel="OnUserTextBoxMouseWheel"
                                SizeChanged="OnUserTextBoxSizeChanged"
                                TextChanged="OnUserTextBoxTextChanged"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto">
                                <TextBox.Background>
                                    <SolidColorBrush
                                        Opacity="0.5"
                                        Color="{DynamicResource SystemChromeLowColor}" />
                                </TextBox.Background>
                            </TextBox>
                        </StackPanel>
                        <Button
                            x:Name="AttachFileButton"
                            Grid.Column="0"
                            Height="30"
                            MaxHeight="180"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnAttachFileButtonClick"
                            Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                            Opacity="0.7"
                            Style="{StaticResource ButtonRevealStyle}"
                            ToolTip="Translate (Ctrl+Alt+Enter)">
                            <Button.ContextMenu>
                                <ContextMenu Opened="OnContextMenuOpened">
                                    <MenuItem
                                        Click="OnSelectFileClick"
                                        Header="Select File" />
                                    <MenuItem
                                        x:Name="PasteFromClipboardMenuItem"
                                        Click="OnPasteFromClipboardClick"
                                        Header="Paste from Clipboard" />
                                </ContextMenu>
                            </Button.ContextMenu>
                            <StackPanel Orientation="Horizontal">
                                <Viewbox Width="22">
                                    <ui:SymbolIcon
                                        Margin="5,5,5,5"
                                        Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                                        Symbol="Add" />
                                </Viewbox>
                            </StackPanel>
                        </Button>
                        <Button
                            x:Name="TranslateButton"
                            Grid.Column="0"
                            Height="30"
                            MaxHeight="180"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            fw:RevealElement.BorderRadius="4"
                            Background="Transparent"
                            Click="OnTranslateButtonClick"
                            Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                            Opacity="0.7"
                            Style="{StaticResource ButtonRevealStyle}"
                            ToolTip="Translate (Ctrl+Alt+Enter)">
                            <StackPanel Orientation="Horizontal">
                                <Viewbox Width="22">
                                    <ui:SymbolIcon
                                        Margin="5,5,5,5"
                                        Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                                        Symbol="Globe" />
                                </Viewbox>
                            </StackPanel>
                        </Button>
                        <Button
                            x:Name="ExecButton"
                            Grid.Column="1"
                            Width="43"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            fw:RevealElement.BorderRadius="4"
                            Click="OnExecButtonClick"
                            Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                            Style="{StaticResource ButtonRevealStyle}"
                            ToolTip="Send message (Ctrl+Enter)">
                            <ui:SymbolIcon Symbol="Send" />
                        </Button>
                        <Button
                            x:Name="CancelButton"
                            Grid.Column="1"
                            Width="43"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            fw:RevealElement.BorderRadius="4"
                            Click="OnCancelButtonClick"
                            Foreground="{DynamicResource SystemBaseMediumHighColorBrush}"
                            Opacity="0.9"
                            Style="{StaticResource ButtonRevealStyle}"
                            Visibility="Collapsed">
                            <ui:SymbolIcon Symbol="Cancel" />
                        </Button>
                        <ui:ProgressRing
                            x:Name="ProgressRing"
                            Grid.Column="1"
                            Width="43"
                            Height="30"
                            Margin="5,0,0,0"
                            IsActive="False"
                            Opacity="0.9" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <StatusBar
            Grid.Row="2"
            Background="#00000000">
            <StatusBarItem
                HorizontalAlignment="Right"
                DockPanel.Dock="Right">
                <Label
                    x:Name="TokenUsageButton"
                    Padding="5,0,5,0"
                    Foreground="#FF959595"
                    MouseLeftButtonDown="OnTokenUsageMouseLeftButtonDown">
                    <ui:SymbolIcon Symbol="FourBars" />
                </Label>
            </StatusBarItem>
            <Separator DockPanel.Dock="Right" />
            <StatusBarItem
                HorizontalAlignment="Right"
                DockPanel.Dock="Right">
                <Label
                    x:Name="TokensLabel"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#FF959595"
                    MouseLeftButtonDown="OnTokensLabelMouseLeftButtonDown" />
            </StatusBarItem>
            <Separator DockPanel.Dock="Right" />
            <StatusBarItem
                HorizontalAlignment="Right"
                DockPanel.Dock="Right">
                <Label
                    x:Name="TimeLabel"
                    Padding="10,0,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Foreground="#FF959595" />
            </StatusBarItem>
        </StatusBar>
        <!--  https://github.com/whistyun/MdXaml/wiki/How-to-customise-style  -->
    </Grid>
    <fw:AcrylicWindow.Background>
        <SolidColorBrush
            Opacity="0.6"
            Color="{DynamicResource DefaultColor1}" />
    </fw:AcrylicWindow.Background>

    <fw:AcrylicWindow.Foreground>
        <SolidColorBrush
            Opacity="0.6"
            Color="{DynamicResource InfoColor2}" />
    </fw:AcrylicWindow.Foreground>
</fw:AcrylicWindow>
